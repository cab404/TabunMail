<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp" android:paddingRight="3dp" android:paddingBottom="2dp"
        android:paddingTop="2dp">
    <RelativeLayout
            tools:ignore="UselessParent"
            android:paddingTop="3dp" android:paddingLeft="3dp" android:paddingRight="3dp" android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#333333"
            android:id="@+id/letter_label_root">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true" android:paddingLeft="8dp" android:paddingRight="8dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/replacer" android:id="@+id/title"
                      android:textColor="@color/Mail.Label.Primary.Color"
                      android:textSize="@dimen/Mail.Label.Primary.Size"
                      android:singleLine="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/replacer" android:id="@+id/about"
                      android:textColor="@color/Mail.Label.Secondary.Color"
                      android:textSize="@dimen/Mail.Label.Secondary.Size"/>
        </LinearLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/comments_new"
                  android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true" android:text="+12"
                  android:textColor="@color/Mail.Label.Count.Green"
                  android:textSize="@dimen/Mail.Label.Count.Size" android:layout_marginRight="4dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/comments"
                  android:text="12" android:textColor="@color/Mail.Label.Primary.Color"
                  android:layout_alignParentBottom="true" android:layout_toLeftOf="@+id/comments_new"
                  android:textSize="@dimen/Mail.Label.Count.Size"/>
    </RelativeLayout>
</FrameLayout>