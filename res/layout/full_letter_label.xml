<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp" android:paddingRight="3dp" android:paddingBottom="2dp"
        android:paddingTop="1dp">
    <RelativeLayout
            tools:ignore="UselessParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/label_bg"
            >
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:id="@+id/text">
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="center" android:layout_below="@+id/text"
                    android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                    android:id="@+id/userdata">
                <ImageView
                        android:layout_width="@dimen/Mail.Letter.Starter.Size"
                        android:layout_height="@dimen/Mail.Letter.Starter.Size"
                        android:id="@+id/starter_avatar"
                        android:src="@drawable/ic_launcher"
                        android:layout_below="@+id/text" android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" android:layout_marginRight="4dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/replacer"
                        android:id="@+id/starter_nick" android:layout_toRightOf="@+id/starter_avatar"
                        android:textSize="@dimen/Mail.Letter.Starter.Size"
                        android:layout_alignTop="@+id/starter_avatar" android:textColor="@color/Mail.Label.Count.Primary"/>
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/replacer"
                    android:id="@+id/recepients" android:layout_below="@+id/userdata"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:textSize="@dimen/Mail.Label.Secondary.Size"
                    android:textColor="@color/Mail.Label.Secondary.Color"/>
        </RelativeLayout>
</FrameLayout>