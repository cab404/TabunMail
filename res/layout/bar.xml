<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/Mail.Bar.Height" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/Mail.Bar.BG">
    <ImageView
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:id="@+id/icon" android:layout_alignParentTop="false" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:src="@drawable/ic_launcher" android:layout_margin="4dip"
            android:layout_centerVertical="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Mail.App.Name"
            android:id="@+id/title" android:layout_centerVertical="true" android:layout_toRightOf="@+id/icon"
            android:textColor="@color/Mail.Bar.Font.Color" android:textSize="@dimen/Mail.Bar.Font.Size"
            android:shadowColor="#000000" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="1"
            android:singleLine="true"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_alignParentTop="true"

            android:layout_toRightOf="@+id/title" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
            android:orientation="horizontal" android:gravity="right" android:layout_marginRight="2dp">

    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
          android:background="#111111"/>
</RelativeLayout>