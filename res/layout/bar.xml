<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/Mail.Bar.Height" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/Mail.Bar.BG">
    <ImageView
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:id="@+id/icon" android:layout_alignParentTop="false" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:src="@drawable/ic_launcher" android:layout_margin="4dip"
            android:layout_centerVertical="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Mail.App.Name"
            android:id="@+id/title" android:layout_centerVertical="true" android:layout_toRightOf="@+id/icon"
            android:textColor="@color/Mail.Bar.Font.Color" android:textSize="@dimen/Mail.Bar.Font.Size"
            android:singleLine="true" android:layout_toLeftOf="@+id/bar_contents"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"

            android:orientation="horizontal" android:gravity="right"
            android:id="@+id/bar_contents" android:minWidth="100dp"
            android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
          android:background="#111111" android:id="@+id/letter_label_root"/>
</RelativeLayout>